
{
    "manifest_version": 2,
    "name": "Shopify Detector",
    "version": "0.1",
    "description": "Detect when you're on a Shopify site with zero clicks",
    "browser_action": {
        "default_icon": {                // optional
          "32": "images/shopify-logo-grey (1).png"      // optional
        },
        "default_title": "Shopify Detector",  // optional, shown in tooltip
        "default_popup": "test.html"    // optional
      },
      "content_scripts": [{
        "css": ["styles.css"],
        "js": ["content.js"],
        "matches": ["<all_urls>"]
      }]
    }